{% extends "base.html.twig" %}
{% block title 'Se connecter' %}

{% block body %}
    <div class="container"> 
    {% if error %}
        <div class="alert alert-danger">
          {{ error.messageKey }}
        </div>
    {% endif  %}
        <form action="{{ path ('login')}}" method="POST">
            <div class="form-group"> 
                <label for="username"> Non d'utilisateur </label> 
                <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">     
            </div> 
            <div class="form-group"> 
                <label for="password"> Mot de passe </label> 
                <input type="password" name="_password" id="password" class="form-control">     
            </div> 
            
            <button type="submit" class="btn btn-primary"> Se connecter </button> 
        </form>
    </div>

{% endblock %}
